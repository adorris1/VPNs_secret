<%= render 'authy_modal' %>
<h1>Login Portal</h1>

<%= form_tag sessions_path, id: "login-form" do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, @user.email, class: "form-control", placeholder: "you@yourdomain.com" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, @user.password, class: "form-control" %>
  </div>
  <button class="btn btn-primary" type="submit">Log In</button>
<% end -%>

<% content_for :javascript do %>
  <%= javascript_include_tag 'sessions', 'data-turbolinks-track' => true %>
<% end %>